
<div class="container">
<h1 class="text-center">Checkout all our parking spots ðŸš—</h1>

  <%# Geocoding part %>
  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>
    "data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <% @parkings.each do |parking| %>
    <div class="card-trip">
    <% if parking.photo.attached?%>
    <%= cl_image_tag parking.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %> %>
      <img src="https://images.unsplash.com/photo-1604063155785-ee4488b8ad15?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1469&q=80)" />
      <% end %>

      <div class="card-trip-infos">
      <h2> <%= link_to parking.title, parking_path(parking) %> </h2>
      <h2 class="card-trip-pricing"><%= parking.city %></h2>
      </div>
      <p class="ml-3"> <%= parking.description %> </p>

    </div>
  <% end %>

<div class="container text-center">
<%= link_to "Create a new parking", new_parking_path, class: "btn btn-flat text-center" %>
</div>

</div>
